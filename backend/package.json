{
  "name": "telegram-winamp-player-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "watch:ts": "tsc --watch",
    "watch:node": "nodemon dist/index.js",
    "dev:live": "concurrently \"npm run watch:ts\" \"npm run watch:node\"",
    "build": "tsc",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.19.0",
    "telegraf": "^4.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.0",
    "nodemon": "^3.0.0",
    "concurrently": "^8.0.0"
  }
}
